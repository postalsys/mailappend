{
    "name": "mailappend",
    "version": "1.0.0",
    "description": "Append email files to a folder in an IMAP server",
    "main": "bin/mailappend.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build-source": "rm -rf node_modules package-lock.json && npm install && npm run licenses && rm -rf node_modules package-lock.json && npm install --production && rm -rf package-lock.json",
        "build-dist": "pkg --compress Brotli package.json && rm -rf package-lock.json && npm install",
        "licenses": "license-report --only=prod --output=table --config license-report-config.json > licenses.txt"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/postalsys/mailappend.git"
    },
    "keywords": [
        "IMAP",
        "RFC822",
        "append"
    ],
    "bin": {
        "mailappend": "bin/mailappend.js"
    },
    "author": "Postal Systems OÃœ",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/postalsys/mailappend/issues"
    },
    "homepage": "https://github.com/postalsys/mailappend#readme",
    "dependencies": {
        "dotenv": "16.0.0",
        "imapflow": "1.0.80",
        "minimist": "1.2.5",
        "nodemailer": "6.7.2"
    },
    "devDependencies": {
        "license-report": "4.5.0",
        "pkg": "5.5.2"
    },
    "pkg": {
        "assets": [
            "licenses.txt",
            "LICENSE.txt"
        ],
        "targets": [
            "node16-linux-x64",
            "node16-macos-x64",
            "node16-win-x64"
        ],
        "outputPath": "ee-dist"
    }
}
